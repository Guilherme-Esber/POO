#ifndef PONTO_H
#define PONTO_H

#include <iostream>
using namespace std;

class Ponto {
private:
    int x, y;

public:
    Ponto(int x = 0, int y = 0);
    Ponto& operator++();      // Pré-incremento
    Ponto operator++(int);    // Pós-incremento
    void exibir() const;
};

#endif



#include "Ponto.h"

Ponto::Ponto(int x, int y) : x(x), y(y) {}

Ponto& Ponto::operator++() {
    ++x;
    ++y;
    return *this;
}

Ponto Ponto::operator++(int) {
    Ponto temp = *this;
    x++;
    y++;
    return temp;
}

void Ponto::exibir() const {
    cout << "(" << x << ", " << y << ")" << endl;
}



#include "Ponto.h"

int main() {
    Ponto p(3, 4);
    cout << "Ponto original: ";
    p.exibir();

    ++p;
    cout << "Após pré-incremento: ";
    p.exibir();

    p++;
    cout << "Após pós-incremento: ";
    p.exibir();

    return 0;
}
