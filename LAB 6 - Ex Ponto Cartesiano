#include <iostream>
using namespace std;

class Ponto2D {
private:
    double x, y;

public:
    Ponto2D(double x = 0.0, double y = 0.0) : x(x), y(y) {}

    Ponto2D& operator++() {
        ++x;
        ++y;
        return *this;
    }

    Ponto2D& operator++(int) {
        ++x;
        ++y;
        return *this;
    }

    void imprimir() const {
        cout << "(" << x << ", " << y << ")" << endl;
    }
};

int main() {
    Ponto2D p(3, 4);

    cout << "Ponto inicial: ";
    p.imprimir();

    cout << "\nAplicando pré-incremento (++p): ";
    ++p;
    p.imprimir();

    cout << "\nAplicando pós-incremento (p++): ";
    p++;
    p.imprimir();

    return 0;
}
