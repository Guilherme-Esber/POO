#include <iostream>
#include "CPoligono.h"  // Apenas inclua o arquivo de cabeçalho

int main() {
    try {
        // Entrar com o número de lados e comprimento do lado
        int n, b;
        
        std::cout << "Digite o número de lados do polígono (entre 3 e 10): ";
        std::cin >> n;
        std::cout << "Digite o comprimento de cada lado: ";
        std::cin >> b;

        // Criando o polígono regular com os valores fornecidos pelo usuário
        CPoligono poligono(n, b);

        // Imprimir o nome do polígono
        poligono.imprimirNome();

        // Calcular e imprimir a área
        std::cout << "Área: " << poligono.calcularArea() << " unidades" << std::endl;

        // Calcular e imprimir o perímetro
        std::cout << "Perímetro: " << poligono.calcularPerimetro() << " unidades" << std::endl;

    } catch (const std::exception& e) {
        // Em caso de erro, imprimir a mensagem
        std::cerr << "Erro: " << e.what() << std::endl;
    }

    return 0;
}
